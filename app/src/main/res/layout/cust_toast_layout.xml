<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/chat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ovel"
            android:src="@drawable/chat"


            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/private_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"


            android:text="Private chat"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/participant_ivb"
            app:layout_constraintEnd_toEndOf="@+id/chat1"
            app:layout_constraintStart_toStartOf="@+id/chat1"
            app:layout_constraintTop_toBottomOf="@+id/chat1" />

        <ImageView
            android:id="@+id/participant_ivb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/participant_img"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/chat1"
            app:layout_constraintStart_toStartOf="@+id/chat1"
            app:layout_constraintTop_toBottomOf="@+id/private_chat_tv"
            />

        <TextView
            android:id="@+id/participant_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"


            android:text="Participants"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="@+id/participant_ivb"
            app:layout_constraintStart_toStartOf="@+id/participant_ivb"
            app:layout_constraintTop_toBottomOf="@+id/participant_ivb" />

        <ImageView
            android:id="@+id/screen_share_ivb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/screen_share"
            android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintEnd_toEndOf="@+id/group_chat_ivb"
            app:layout_constraintStart_toStartOf="@+id/group_chat_ivb"
            app:layout_constraintTop_toBottomOf="@+id/group_chat_tv"
            />

        <TextView
            android:id="@+id/screen_share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"


            android:text="Screen share"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="@+id/screen_share_ivb"
            app:layout_constraintStart_toStartOf="@+id/screen_share_ivb"
            app:layout_constraintTop_toBottomOf="@+id/screen_share_ivb" />

        <ImageView
            android:id="@+id/group_chat_ivb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:src="@drawable/group_chat"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="@+id/chat1"
            />

        <TextView
            android:id="@+id/group_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:text="Group chat"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/screen_share_ivb"
            app:layout_constraintEnd_toEndOf="@+id/group_chat_ivb"
            app:layout_constraintStart_toStartOf="@+id/group_chat_ivb"
            app:layout_constraintTop_toBottomOf="@+id/group_chat_ivb" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>